<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    card_view:cardElevation="4dp"
    android:layout_gravity="center"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/roboto_mono"
            android:padding="16dp"
            android:text="Breathing Exercise "
            android:textAlignment="center"
            android:textColor="@color/colorDark"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/breathing_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@color/button"
            android:elevation="4dp"
            android:fontFamily="@font/roboto_mono"
            android:scaleType="centerCrop"
            android:src="@drawable/relax"
            android:text="Play Video" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/roboto_mono"
            android:padding="10dp"
            android:text="Play to Relax your mind"
            android:textAlignment="center"
            android:textColor="@color/colorDark"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/play"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@color/red"
            android:elevation="4dp"
            android:fontFamily="@font/roboto_mono"
            android:scaleType="centerCrop"
            android:src="@drawable/play"
            android:text="Play Video" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_mono"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:text="Start a Yoga Session"
            android:textAlignment="center"
            android:textColor="@color/colorDark"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/yoga"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@color/red"
            android:elevation="5dp"
            android:fontFamily="@font/roboto_mono"
            android:scaleType="centerCrop"
            android:src="@drawable/yoga_but"
            android:text="Start Yoga" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_mono"
            android:gravity="center_horizontal"
            android:padding="18dp"
            android:text="Grounding Excerise"
            android:textAlignment="center"
            android:textColor="@color/colorDark"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/ground"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:background="@color/red"
            android:elevation="4dp"
            android:fontFamily="@font/roboto_mono"
            android:scaleType="centerCrop"
            android:src="@drawable/ground"
            android:text="Start Yoga" />
    </LinearLayout>
</androidx.cardview.widget.CardView>