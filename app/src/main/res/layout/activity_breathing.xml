<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorDark"
    tools:context=".BreathingActivity">
    <!--android:background="#389B90"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="86dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/breath_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto_mono_medium"
            android:text="Breath In"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="343dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/hold1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:fontFamily="@font/roboto_mono_medium"
                android:text="Hold"
                android:textSize="20sp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="216dp"
                    android:layout_height="154dp"
                    app:srcCompat="@drawable/rect" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/time_seconds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_mono_medium"
                        android:text="5"
                        android:textColor="#ffffff"
                        android:textSize="24sp"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/time_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_mono_medium"
                        android:text="Secs"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:textStyle="bold">

                    </TextView>
                </LinearLayout>

            </FrameLayout>

            <TextView
                android:id="@+id/hold2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:fontFamily="@font/roboto_mono_medium"
                android:text="Hold"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!--android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginLeft="2dp"-->
        </LinearLayout>

        <TextView
            android:id="@+id/breath_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/roboto_mono_medium"
            android:gravity="center"
            android:text="Breath Out"
            android:textSize="20sp"
            android:textStyle="bold"/>


        <Button
            android:id="@+id/done_mindfulness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/button"
            android:fontFamily="@font/roboto_mono_medium"
            android:text="Done"
            android:layout_marginTop="12dp"
            android:textColor="#ffff"
            android:textSize="16sp"
            android:theme="@style/PrimaryFlatButton" />
        />
    </LinearLayout>


</LinearLayout>