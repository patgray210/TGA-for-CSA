<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:clickable="true"
    android:id="@+id/patient_card_view"
    app:cardBackgroundColor="#f4f4f4"
    android:paddingBottom="5dp"
    android:layout_margin="4dp"
    android:focusable="true"
    card_view:cardElevation="12dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            >
            <!--<TextView
                android:id="@+id/patient_name_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:fontFamily="@font/roboto_mono"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"/>-->
            <TextView
                android:id="@+id/patient_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_mono"
                android:textColor="@color/colorPrimaryDark"
                android:text="John Isner "
                android:textSize="20sp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            >
            <TextView
                android:id="@+id/patient_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/patient_age_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Years old"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            >
            <TextView
                android:id="@+id/patient_mental_health_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trauma Symptom: "
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/patient_mental_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abuse"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            >
            <TextView
                android:id="@+id/patient_sex_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender Identification: "
                android:textSize="14sp" />
            <TextView
                android:id="@+id/patient_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            >
             <TextView
                 android:id="@+id/patient_id_tag"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Reference ID: "
                 android:textSize="14sp"/>

            <TextView
                android:id="@+id/patient_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12345"
                android:textSize="14sp"/>
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
